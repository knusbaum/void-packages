# Template file for 'jmeter-bin'
pkgname=jmeter-bin
version=5.1.1
revision=1
wrksrc="apache-jmeter-${version}"
depends="virtual?java-runtime"
short_desc="Load test applications and measure performance"
maintainer="Kyle Nusbaum <knusbaum+void@sdf.org>"
license="Apache-2.0"
homepage="https://jmeter.apache.org/"
distfiles="http://www.gtlib.gatech.edu/pub/apache//jmeter/binaries/apache-jmeter-${version}.tgz"
checksum=844d510fe04aaf62269311f18117d75c959148bb9f0fc76b4047abc8a8edb4ae

do_install() {
	vmkdir /opt/apache-jmeter
	vcopy . /opt/apache-jmeter

	vmkdir /usr/bin
	ln -s /opt/apache-jmeter/bin/jmeter ${DESTDIR}/usr/bin/jmeter
}

# Template file for 'python3-podman'
pkgname=python3-podman
version=0.11.1.1
revision=1
noarch=yes
wrksrc="libpod-${version}"
build_style=python3-module
pycompile_module="podman"
hostmakedepends="python3-setuptools"
depends="podman python3 python3-dateutil python3-varlink python3-psutil python3-pypodman"
short_desc="A library used to create container pods (Python2)"
maintainer="Kyle Nusbaum <knusbaum+void@sdf.org>"
license="Apache-2.0"
homepage="https://podman.io/"
distfiles="https://github.com/containers/libpod/archive/v${version}.tar.gz"
checksum=c2ca01bfa31f8f6034c2b230a4187f0c9b4216da14f7ba2a4d2eece13de71683
pycompile_version="${py3_ver}"
python_version=3

do_build() {
	echo pass
}

do_install() {
	make install.python PREFIX=${DESTDIR}/usr DESTDIR=${DESTDIR}
}

python3-pypodman_package() {
	noarch=yes
	pycompile_module="pypodman"
	depends="python3 python3-pytoml python3-humanize"
	pkg_install() {
		vmove "usr/lib/python${py3_ver}/site-packages/pypodman*"
	}
}

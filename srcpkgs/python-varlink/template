# Template file for 'python-varlink'
pkgname=python-varlink
version=29.0.0
revision=1
noarch=yes
wrksrc="python-${version}"
build_style=python-module
pycompile_module="varlink"
hostmakedepends="python-setuptools python3-setuptools"
depends="python"
short_desc="Python implementation of the Varlink protocol (Python2)"
maintainer="Kyle Nusbaum <knusbaum+void@sdf.org>"
license="Apache-2.0"
homepage="https://varlink.org/python/"
distfiles="https://github.com/varlink/python/archive/${version}.tar.gz"
checksum=08d1c177e16b65b2f563f0d16fd2960cc98baf7f7c08006f61216c409d930dc3

python3-varlink_package() {
	noarch=yes
	pycompile_module="varlink"
	depends="python3"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
	}
}
